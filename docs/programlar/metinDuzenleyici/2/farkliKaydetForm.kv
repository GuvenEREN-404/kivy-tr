<farkliKaydetForm>:
    title: "Dosya Kaydet"
    size_hint: (.9, .9)
    BoxLayout:
        orientation: 'vertical'

        FileChooserListView:
            size_hint_y: 80
            id: dosya_secim
            filters: ['*.*']
            path: app.son_patika
            on_selection: pass

        BoxLayout:
            size_hint_y: 10
            Label:
                text: "Dosya Adı:"
                size_hint_x: 20
            TextInput:
                id: dosya_adi
                size_hint_x: 80

        BoxLayout:
            size_hint_y: 10
            Button:
                text: "Kaydet"
                on_press: pass
            Button:
                text: "Vazgeç"
                on_press: root.dismiss()
